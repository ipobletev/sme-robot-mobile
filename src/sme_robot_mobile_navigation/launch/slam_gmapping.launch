<launch>

  <!-- 
    SLAM GMAPPING LAUNCH FILE
    This launch file starts:
    - Gazebo simulation environment
    - Robot description and state publishers
    - Gmapping SLAM node for autonomous map building
    - RViz for visualization
  -->

  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>

  <!-- ========================================== -->
  <!-- 1. GAZEBO SIMULATION -->
  <!-- ========================================== -->
  
  <!-- Start Gazebo with an empty world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description" 
         command="$(find xacro)/xacro '$(find sme_robot_mobile_description)/urdf/sme_robot_mobile_robot.xacro'"/>

  <!-- Spawn the robot in Gazebo -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model robot -param robot_description"/>

  <!-- Start Robot State Publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Start Joint State Publisher -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>

  <!-- ========================================== -->
  <!-- 2. SLAM - GMAPPING -->
  <!-- ========================================== -->

  <!-- Gmapping SLAM Node -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <!-- Load parameters from config file -->
    <rosparam file="$(find sme_robot_mobile_navigation)/config/gmapping/gmapping_params.yaml" command="load"/>
    
    <!-- Topic remapping -->
    <remap from="scan" to="/scan"/>
  </node>

  <!-- ========================================== -->
  <!-- 3. VISUALIZATION -->
  <!-- ========================================== -->

  <!-- RViz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find sme_robot_mobile_navigation)/rviz/slam.rviz"/>
  </group>

</launch>
